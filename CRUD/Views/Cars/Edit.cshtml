@model CRUD.Models.Car

@{
    ViewData["Title"] = "Edit";
    var listOfBrands = ViewData["brandNames"] as IList<Brand>;
    var listOfFuelTypes = ViewData["fuelTypeNames"] as IList<FuelType>;
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <select name="BrandId" asp-for="BrandId">
                @if (listOfBrands!= null)
                {
                        @foreach (var brn in listOfBrands)
                    {
                            <option value="@brn.Id" asp-for="BrandId">@brn.Name</option>
                    }
                }
                </select>  
            </div>
            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <select name="FuelTypeId" asp-for="FuelTypeId">
                    @if (listOfFuelTypes != null)
                    {
                        @foreach (var ft in listOfFuelTypes)
                        {
                            <option value="@ft.Id" asp-for="FuelTypeId">@ft.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage" class="control-label"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturingDate" class="control-label"></label>
                <input asp-for="ManufacturingDate" class="form-control" />
                <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
